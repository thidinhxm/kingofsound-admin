{{> header }}
<div class="container tm-mt-big tm-mb-big">
  <div class="row">
    <div class="col-xl-10 col-lg-12 col-md-12 col-sm-12 mx-auto">
      <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Chi tiết đơn hàng</h2>
          </div>
        </div>
        {{!-- {{#if currentOrder }} --}}

        <form method="POST" action="/orders/update" class="tm-edit-product-form">
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                {{#with order}}
                <label for="order_id">Mã đơn hàng
                </label>
                <input id="order_id" name="order_id" type="text" class="form-control validate" value="{{order_id}}"
                  readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_phone">Số điện thoại
                </label>
                <input id="customer_phone" name="customer_phone" type="text" class="form-control validate"
                  value="{{receive_phone}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="create_day">Ngày tạo đơn hàng
                </label>
                <input id="create_day" name="create_day" type="text" class="form-control validate"
                  value="{{formatDateTime create_date}}" readonly>
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="send_date">Ngày gửi đơn hàng
                </label>
                <input id="send_date" name="send_date" type="text" class="form-control validate"
                  value="{{formatDateTime send_date}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_name">Tên khách hàng
                </label>
                <input id="customer_name" name="customer_name" type="text" class="form-control validate"
                  value="{{'user.firstname'}} {{'user.lastname'}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="total_order">Thành tiền đơn hàng
                </label>
                <input id="total_order" name="total_order" type="text" class="form-control validate"
                  value="{{total_price}}" readonly>
              </div>
            </div>

            <div class="col-xl-12 col-lg-12 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_address">Địa chỉ nhận hàng
                </label>
                <input id="customer_address" name="customer_address" type="text" class="form-control validate"
                  value="{{receive_address}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="amount">Số lượng sản phẩm đã mua
                </label>
                <input id="amount" name="amount" type="text" class="form-control validate"
                  value="{{'detailorders.totalProduct'}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="voucher">Voucher được áp dụng
                </label>
                <input id="voucher" name="voucher" type="text" class=" form-control  validate"
                  value="{{voucher}}" readonly>
              </div>
            </div>



            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="order_status">Trạng thái đơn hàng </label>
                <select class="custom-select tm-select-accounts" id="order_status" name="order_status">

                  <option selected="{{order_status}}"> {{order_status}}</option>
                  <option value="Đang chờ xử lý">Đang chờ xử lý</option>
                  <option value="Đang giao">Đang giao</option>
                  <option value="Đã giao">Đã giao</option>
                </select>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="payment_status">Trạng thái thanh toán </label>
                <select class="custom-select tm-select-accounts" id="payment_status" name="payment_status">

                  <option selected="{{payment_status}}"> {{payment_status}}</option>
                  <option value="Chưa thanh toán">Chưa thanh toán</option>
                  <option value="Đã thanh toán">Đã thanh toán</option>

                </select>
              </div>
            </div>


            <div class="mb-12 col-xs-12 col-sm-12">
              <button type="submit" class="btn btn-primary btn-block text-uppercase">Cập nhật đơn hàng</button>
            </div>

          </div>
      </div>
      </form>
      {{/with}}
      {{!-- {{/if}} --}}
    </div>
  </div>
</div>

</div>