{{> header }}
<div class="container tm-mt-big tm-mb-big">
  <div class="row">
    <div class="col-xl-10 col-lg-12 col-md-12 col-sm-12 mx-auto">
      <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Chi tiết đơn hàng</h2>
          </div>
        </div>
        {{!-- {{#if currentOrder }} --}}

        <form method="POST" action="/categories/store-category" class="tm-edit-product-form">
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                {{#with order}}
                <label for="order_id">Mã đơn hàng
                </label>
                <input id="order_id" name="order_id" type="text" class="form-control validate" value="{{order_id}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_phone">Số điện thoại
                </label>
                <input id="customer_phone" name="customer_phone" type="text" class="form-control validate"
                  value="{{receive_phone}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="create_day">Ngày tạo đơn hàng
                </label>
                <input id="create_day" name="create_day" type="text" class="form-control validate"
                  value={{formatDateTime create_day}} readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="send_date">Ngày gửi đơn hàng
                </label>
                <input id="send_date" name="send_date" type="text" class="form-control validate"
                  value='{{formatDateTime send_day}}' readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_name">Tên khách hàng
                </label>
                <input id="customer_name" name="customer_name" type="text" class="form-control validate"
                  value="{{'user.firstname'}} {{'user.lastname'}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="total_order">Thành tiền đơn hàng
                </label>
                <input id="total_order" name="total_order" type="text" class="form-control validate" value="{{total_price}}" readonly>
              </div>
            </div>

            <div class="col-xl-12 col-lg-12 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_address">Địa chỉ nhận hàng
                </label>
                <input id="customer_address" name="customer_address" type="text" class="form-control validate" value="{{receive_address}}" readonly>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_address">Số lượng sản phẩm đã mua
                </label>
                <input id="customer_address" name="customer_address" type="text" class="form-control validate" value="{{'detailorders.totalProduct'}}" readonly>
              </div>
            </div>

             <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="customer_address">Voucher được áp dụng
                </label>
                <input id="customer_address" name="customer_address" type="text" class=" form-control  validate" value="{{voucher}}" readonly>
              </div>
            </div>



            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="parent_category">Trạng thái đơn hàng </label>
                <select class="custom-select tm-select-accounts" id="parent_category" name="parent_category">

                  <option selected='1'> {{order_status}}</option>
                  <option value="1">Tai nghe</option>
                  <option value="2">Loa</option>

                </select>
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-12">
              <div class="form-group mb-3">
                <label for="parent_category">Trạng thái thanh toán </label>
                <select class="custom-select tm-select-accounts" id="parent_category" name="parent_category">

                  <option selected='1'> {{payment_status}}</option>
                  <option value="1">Tai nghe</option>
                  <option value="2">Loa</option>

                </select>
              </div>
            </div>
          </div>

          <div class="mb-12 col-xs-12 col-sm-12">
            <button type="submit" class="btn btn-primary btn-block text-uppercase">Thêm loại sản phẩm</button>
          </div>
      </div>
      </form>
      {{/with}}
      {{!-- {{/if}} --}}
    </div>
  </div>
</div>

</div>